            button.btn.btn-default.remote-button(type="button", onclick="postData('xbox', 'bumberRight', {})")
                span.glyphicon.glyphicon-chevron-right
            br
            button.btn.btn-default.btn-lg.remote-button(type="button", onclick="postData('xbox', 'arrowLeft', {})")
                span.glyphicon.glyphicon-triangle-left
