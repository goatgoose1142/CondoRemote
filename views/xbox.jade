                span.glyphicon.glyphicon-volume-up
            button.btn.btn-default.btn-lg.remote-button(type="button", onclick="postData('xbox', 'menu', {})")
                span.glyphicon.glyphicon-th-large
            button.btn.btn-default.btn-lg.remote-button(type="button", onclick="postData('xbox', 'power', {})")
                span.glyphicon.glyphicon-off
