                span.glyphicon.glyphicon-stop
            button.btn.btn-default.btn-lg.remote-button(type="button", onclick="postData('xbox', 'arrowRight', {})")
                span.glyphicon.glyphicon-triangle-right
            br
            button.btn.btn-default.remote-button(type="button", onclick="postData('xbox', 'y', {})")
